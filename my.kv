<MyLayout>:

    name: name
    #email: email

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "top"
		
		BoxLayout:
			orientation: "vertical"
			size_hint: None, None
			size: self.minimum_size

			Label:
				size_hint: None, None
				size: 300, 30
				text_size: self.size
				paddimg: 20
				#halign: 'center'
				valign: 'center'
				text:"\nKillN - Edit out newlines & remove/replace text sections..."

			Label:
				size_hint: None, None
				size: 300, 30
				text_size: self.size
				halign: 'left'
				valign: 'center'
				text: "Select Folder: "

			Label:
				size_hint: None, None
				size: 300, 30
				text_size: self.size
				halign: 'left'
				valign: 'center'
				text: "Name: "
				
			TextInput:
				size_hint: None, None
				size: 300, 30
				id: name
				multiline:False

			Label:
				size_hint: None, None
				size: 300, 30
				text_size: self.size
				halign: 'left'
				valign: 'center'
				text: "Email: "

			TextInput:
				size_hint: None, None
				size: 300, 30
				id: email
				multiline:False
        
			BoxLayout:
			
				orientation: "horizontal"
				size_hint: None, None
				size: self.minimum_size
				
				Button:
					size_hint: None, None
					size: 150, 30 
					text:"Submit"
					padding: 10
					on_press: root.btn()

				Button:
					size_hint: None, None
					size: 150, 30
					text:"Reset"
					padding: 10
					on_press: root.resetbtn()
			
